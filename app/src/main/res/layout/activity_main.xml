<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutInicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#023875"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/txtNumero"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:hint="Introduce un numero"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFDFD" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_marginTop="100dp"
        android:textColor="#FFFDFD"
        android:textColorHighlight="#FFFFFF"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="625dp"
        app:srcCompat="@mipmap/itla" />


    <ImageView
        android:id="@+id/swipeRight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        app:srcCompat="@drawable/right" />

    <ImageView
        android:id="@+id/swipeLeft"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="185dp"
        app:srcCompat="@drawable/left" />



    <Button
        android:id="@+id/btnBlanco"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="colorBlanco" />

    <Button
        android:id="@+id/btnGris"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:backgroundTint="#C4C4C4"
        android:onClick="colorGris" />

    <Button
        android:id="@+id/btnDarkGris"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:backgroundTint="#494949"
        android:onClick="colorDarkGris" />

    <Button
        android:id="@+id/btnNegro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:backgroundTint="#000000"
        android:onClick="colorNegro" />

    <Button
        android:id="@+id/btnNegro3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="#217347"
        android:onClick="defaultApp"
        android:text="Restablecer TEMA" />




</FrameLayout>